<UserControl x:Class="EricNee.AutoStartDesktop.AppIconUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EricNee.AutoStartDesktop"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Initialized="UserControl_Initialized" HorizontalAlignment="Center" VerticalAlignment="Center">
    <Grid x:Name="GridAppIcon" Width="90" Height="90" MouseEnter="GridAppIcon_MouseEnter" MouseLeave="GridAppIcon_MouseLeave">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Image x:Name="ImageIcon" Grid.Column="0" Grid.Row="0" Height="32" Width="32" Margin="0,10,0,0" VerticalAlignment="Top" MouseLeftButtonUp="ImageIcon_MouseLeftButtonUp"></Image>
        <Label x:Name="LabelName" Grid.Row="0" Grid.Column="0" MouseLeftButtonUp="LabelName_MouseLeftButtonUp" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,10"  />
    </Grid>
</UserControl>
